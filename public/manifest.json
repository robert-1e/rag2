{
    "categories": ["education"],

    "short_name": "RAG 2",
    "name": "RAG Editor",
    "description": "Editor for \"RAG\"s, storing how confident the user is about certain aspects in a \"spec\" (list of topics). Designed for UK A-level students.",

    "display": "standalone",
    "background_color": "#0f172a",
    "theme_color": "#4f46e5",

    "icons": [
        {
            "src": "/favicon.svg",
            "type": "image/svg",
            "sizes": "any"
        }
    ],

    "start_url": "/dashboard",
    "scope": "/",

    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "application/vnd+cmsdb+json": [".cms", ".json"]
            },
            "icons": [
                {
                    "src": "icon.png",
                    "sizes": "180x180",
                    "type": "image/png"
                }
            ],
            "launch_type": "single-client"
        }
    ]
}
